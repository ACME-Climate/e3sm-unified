BootStrap: docker
From: continuumio/miniconda

%files
    e3sm-simple-test.sh /.e3sm-simple-test.sh

%runscript
    #!/bin/bash
    . /opt/conda/etc/profile.d/conda.sh
    conda activate e3sm-simple

%post -c /bin/bash
    . /opt/conda/etc/profile.d/conda.sh
    conda create -n e3sm-simple -c conda-forge -c e3sm e3sm-simple=1.0.0
    conda clean --all

%labels
    MAINTAINER jhkennedy
