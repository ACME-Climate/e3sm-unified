BootStrap: docker
From: continuumio/miniconda

%files
    cime-systests-test.sh /.cime-systests-test.sh

%runscript
    #!/bin/bash
    . /opt/conda/etc/profile.d/conda.sh
    conda activate cime-systests

%post -c /bin/bash
    . /opt/conda/etc/profile.d/conda.sh
    conda create -n cime-systests -c conda-forge -c e3sm cime-systests=1.0.0
    conda clean --all

%labels
    MAINTAINER jhkennedy
