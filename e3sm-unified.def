BootStrap: docker
From: continuumio/miniconda3

%files
    e3sm-unified-test.sh /.e3sm-unified-test.sh

%runscript
    #!/bin/bash
    . /opt/conda/etc/profile.d/conda.sh
    conda activate e3sm-unified-nox

%post -c /bin/bash
    . /opt/conda/etc/profile.d/conda.sh
    conda create -y -n e3sm-unified-nox -c conda-forge -c e3sm -c cdat/label/v82 python=3.7 e3sm-unified=1.3.0 mesalib
    conda clean --all

%labels
    MAINTAINER sterlingbaldwin
